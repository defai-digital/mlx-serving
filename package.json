{
  "name": "@defai.digital/mlx-serving",
  "version": "0.1.0-alpha.0",
  "description": "Modern TypeScript MLX serving engine for Apple Silicon with Zod validation and ReScript state management",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "mlx-serving": "./dist/cli.js",
    "mlx-download": "./dist/cli/mlx-download.js"
  },
  "files": [
    "dist",
    "python",
    "native",
    "scripts",
    "config",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint --max-warnings=0 \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepare:python": "tsx scripts/prepare-env.ts",
    "setup": "tsx scripts/prepare-env.ts",
    "setup:mlx-engine": "bash scripts/setup-mlx-engine.sh",
    "clean": "rm -rf dist .kr-mlx-venv",
    "prepublishOnly": "npm run build && npm run test",
    "postinstall": "node scripts/postinstall.cjs || true",
    "bench": "tsx benchmarks/index.ts",
    "bench:ipc": "tsx benchmarks/index.ts --benchmark ipc",
    "bench:ttft": "tsx benchmarks/index.ts --benchmark ttft",
    "bench:throughput": "tsx benchmarks/index.ts --benchmark throughput",
    "bench:all": "tsx benchmarks/index.ts --benchmark all",
    "bench:report": "tsx benchmarks/index.ts --benchmark all --format markdown --output benchmarks/results/report.md",
    "bench:comparison": "tsx benchmarks/comparison.ts",
    "bench:apple-to-apple": "tsx benchmarks/apple-to-apple-comparison.ts",
    "bench:50-questions": "tsx benchmarks/50-questions-comparison.ts",
    "bench:100-questions": "tsx benchmarks/100-questions-comparison.ts",
    "docs:generate": "typedoc"
  },
  "keywords": [
    "mlx",
    "llm",
    "inference",
    "apple-silicon",
    "typescript",
    "machine-learning",
    "knowrag"
  ],
  "author": "DEFAI",
  "license": "Elastic-2.0",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.52.1",
    "@opentelemetry/sdk-metrics": "^1.26.0",
    "eventemitter3": "^5.0.1",
    "execa": "^7.2.0",
    "js-yaml": "^4.1.0",
    "pino": "^8.16.1",
    "yaml": "^2.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.1",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.0.0",
    "typescript": "~5.4.5",
    "vitest": "^1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/defai-digital/mlx-serving.git"
  },
  "bugs": {
    "url": "https://github.com/defai-digital/mlx-serving/issues"
  },
  "homepage": "https://github.com/defai-digital/mlx-serving",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "os": [
    "darwin"
  ],
  "cpu": [
    "arm64"
  ],
  "engines": {
    "node": ">=22.0.0",
    "python": ">=3.11.0",
    "mlx": ">=3.3.0"
  },
  "peerDependenciesMeta": {
    "comment": "Requires Apple Silicon M3 or later (M3 Pro / M3 Max / M3 Ultra recommended)"
  }
}
